doctype html
html(lang='en')
  head
    title= title
    meta(name='viewport',content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/vesta/css/bootstrap.min.css')
    link(rel='stylesheet', href='/vesta/css/bootstrap-responsive.min.css')
    link(rel='stylesheet', href='/vesta/css/style.css')
  body
    div(class='container')
      div(class='row')
        div(class='span12',id='navhead')
          h1 VESTA
      if (navbar)
        div(class='row')
          div(class='span12')
            div(class='navbar')
              div(class='navbar-inner')
                if (brand)
                  a(class='brand',href='#')= brand
                ul(class='nav')
                  each val in navbar
                    if (val.active)
                      li(class='active')
                        a(href='#{val.context}')= val.text
                    else
                      li
                        a(href='#{val.context}')= val.text
                ul(class='nav pull-right',id='nav-sec-user')
                  if (!user)
                    li
                      a(href='/vesta/login')
                        i(class='icon-user')
                        span(class='login') login
                  if (user)
                    li
                      a(href='/vesta/users/#{user.id}')
                        i(class='icon-user icon')
                        span(class='username')= user.username
                    li
                      a(href='/vesta/logout')
                        i(class='icon-off icon')
                        small(class='logout text-error') logout
      div(class='row')
        div(class='span12')
          block content